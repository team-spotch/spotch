
<div class="contents-index clearfix">
  <div class="side">
    <%= button_to "サークルを作る",new_circle_path,class: "btn btn-success",method: :get %>
    <div class="side-nav">
      <div class="side-top">
        <h2>サークル一覧</h2>
      </div>
      <!-- /.side-top -->
      <div class="side-content">
        <%= search_form_for @q do |f| %>
        <%= f.search_field :name_or_desc_cont %>
        <%= f.submit %>
        <% end %>
      </div>
      <!-- /.side-content -->
    </div>
    <!-- /.side-nav -->
  </div>
  <!-- /.side -->
  <div class="main clearfix">
    <div class="circles-list clearfix">
      <% @circles.each do |circle| %>
        <div class="circle">
          <% if circle.image? %>
            <%= image_tag circle.image.url,class: "circle-image" %></td>
          <% else %>
            <%= image_tag "circle_img_dafault_gray.png",class: "circle-image"%>
          <% end %>
          <p class="circle-name"><%= circle.name %></p>
          <p class="circle-desc"><%= circle.desc %></p>
          <p class="link-more"><a href="/circles/<%= circle.id %>">もっとみる<i class="fa fa-external-link" aria-hidden="true"></i></a></p>
        </div>
        <!-- /.circle -->
      <% end %>
      <div class="circle-paginate">
        <%= paginate @circles %>
      </div>
    </div>
    <!-- /.circles-list -->
  </div>
  <!-- /.main -->
</div>
<!-- /.contents -->


