

<h1>サークル一覧</h1>

<table>
  <thead>
    <tr>
      <th>サークル名</th>
      <th>サークル画像</th>
      <th>サークル紹介</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @circles.each do |circle| %>
      <tr>
        <td><%= circle.name %></td>
        <% if circle.image? %>
          <td><%= image_tag circle.image.url %></td>
        <% else %>
          <td><%= image_tag "circle_img_default.jpeg",width: 100,height: 100%></td>
        <% end %>
        <td><%= circle.desc %></td>
        <td><%= link_to '詳細', circle %></td>
        <% if circle.circle_member?(circle,current_user) %>
          <td><%= link_to '編集する', edit_circle_path(circle) %></td>
          <td><%= link_to '削除する', circle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'サークルを作る', new_circle_path %>
