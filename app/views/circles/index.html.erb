

<h1>サークル一覧</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @circles.each do |circle| %>
      <tr>
        <td><%= circle.name %></td>
        <td><%= image_tag circle.image.url %></td>
        <td><%= circle.desc %></td>
        <td><%= link_to '詳細', circle %></td>
        <% if circle.circle_member?(circle,current_user) %>
          <td><%= link_to 'Edit', edit_circle_path(circle) %></td>
          <td><%= link_to 'Destroy', circle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'サークルを新しく作る', new_circle_path %>
